{
    "name": "koot-eslint",
    "description": "ESLint related packages.",
    "private": true,
    "scripts": {
        "doc": "docsify serve docs",
        "bootstrap": "node bootstrap.js",
        "reset": "node ./reset.js",
        "publish": "node ./publish.js",
        "test": "mocha packages/eslint-plugin-koot/__tests__ --recursive"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cmux/koot-eslint"
    },
    "keywords": [
        "eslint",
        "linter"
    ],
    "author": {
        "name": "diablohu",
        "email": "diablohudream@gmail.com",
        "url": "http://diablohu.com"
    },
    "contributors": [
        {
            "name": "daqi",
            "url": "https://github.com/daqi"
        }
    ],
    "bugs": {
        "url": "https://github.com/cmux/koot-eslint/issues"
    },
    "homepage": "https://github.com/cmux/koot-eslint",
    "engines": {
        "node": ">=8.9.0"
    },
    "license": "Apache-2.0",
    "devDependencies": {
        "chalk": "^2.4.2",
        "cli-spinners": "^2.2.0",
        "crlf": "^1.1.1",
        "eslint": "^6.4.0",
        "eslint-config-koot": "file:./packages/eslint-config-koot",
        "eslint-plugin-koot": "file:./packages/eslint-plugin-koot",
        "fs-extra": "^8.1.0",
        "glob-promise": "^3.4.0",
        "husky": "^3.0.5",
        "inquirer": "^7.0.0",
        "lerna": "^3.16.4",
        "lerna-wizard": "^1.1.1",
        "lint-staged": "^9.4.0",
        "mocha": "^6.2.0",
        "ora": "^3.4.0",
        "prettier": "^1.18.2",
        "prettier-eslint": "^9.0.0",
        "simple-git": "^1.126.0"
    },
    "eslintIgnore": [
        "node_modules/**/*"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,cjs,mjs}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{xxxxxx}": [
            "tsc --noEmit"
        ],
        "*.{json,md,css,less,sass,scss}": [
            "prettier --write",
            "git add"
        ]
    }
}
